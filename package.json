    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^9.4.1",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.8",
    "nodemon": "^3.0.2",
    "otp-generator": "^4.0.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.102",
