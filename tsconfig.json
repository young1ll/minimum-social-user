{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES5", "ES6", "ESNext", "DOM"],
    "module": "commonjs",
    "preserveValueImports": false,
    "rootDir": ".",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
