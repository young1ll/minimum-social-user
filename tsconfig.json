{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "preserveValueImports": false,
    "rootDir": ".",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
